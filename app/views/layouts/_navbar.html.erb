    <td class="vbmenu_control"><%= link_to "Placeholder", logout_path %></td>
    <td class="vbmenu_control"><%= link_to "Logout", logout_path, :confirm => "Are you sure you want to logout?" %></td>
  </tr>
  </table>
</div>
<!-- / nav buttons bar -->

