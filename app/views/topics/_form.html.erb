<%= form_for @topic do |f| %>
  <%= f.error_messages %>
  <% if params[:forum] %>
    <%= f.hidden_field :forum_id, :value => params[:forum] %>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= fields_for :post do |p| %>
      <%= p.text_area :content, :cols => "80", :rows => "20" %>
    <% end %>
  </p>
  <p><%= f.submit "Create" %></p>
<% end %>
